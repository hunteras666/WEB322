\<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection - Set</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '' }) %>

  <!-- Hero Section -->
  <div class="hero bg-gray-100">
    <h1 class="text-4xl font-bold text-center my-8"><%= set.name %></h1>
    <p class="text-lg text-center mb-8">Below, you will find detailed information about the set: <%= set.name %>.</p>
  </div>

  <!-- Page Content -->
  <div class="container mx-auto">
    <!-- Content Section -->
    <div class="container mx-auto mt-8">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-full">
        </div>
        <div>
          <p><strong>Set Number:</strong> <%= set.set_num %></p>
          <p><strong>Year:</strong> <%= set.year %></p>
          <p><strong>Number of Parts:</strong> <%= set.num_parts %></p>
          <a href="/lego/sets/<%= set.set_num %>" class="btn block w-full text-center py-2 px-4 rounded bg-blue-500 text-white hover:bg-blue-600">View Details</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Script for fetching random quote -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://quotable.io/random")
        .then(response => response.json())
        .then(data => {
          const quoteElement = document.createElement('div');
          quoteElement.innerHTML = `"${data.content}" - ${data.author}`;
          document.body.appendChild(quoteElement);
        })
        .catch(error => console.error("Error fetching quote:", error));
    });
  </script>

  <!-- Back Button -->
  <a href="#" onclick="history.back(); return false;" class="btn block w-full text-center py-2 px-4 rounded bg-blue-500 text-white hover:bg-blue-600">Back</a>
</body>
</html>